<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question_number"
        android:textStyle="bold"
        android:text="@string/question1_text"
        android:layout_alignParentTop="true"
        android:width="100dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_question_title_text_view"
        android:text="@string/question_text"
        android:textStyle="bold"
        android:layout_toRightOf="@id/question_number"
        android:layout_toEndOf="@id/question_number"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question_answer_text"
        android:textStyle="bold"
        android:text="@string/answer_heading_text"
        android:layout_below="@id/question_number"
        android:width="100dp"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_answer"
        android:text="@string/answer_text"
        android:layout_toRightOf="@id/question_answer_text"
        android:layout_toEndOf="@id/question_answer_text"
        android:layout_below="@id/question_number"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>